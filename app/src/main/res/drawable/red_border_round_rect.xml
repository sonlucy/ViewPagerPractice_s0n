<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="false">

        <layer-list>

<!--            빨간색 사각형 -->
            <item>

                <shape
                    android:shape="rectangle">
                    <solid
                        android:color="#FF0000"/>
                </shape>

            </item>

<!--            흰색 사각형 -->
            <item
                android:top="3dp"
                android:left="3dp"
                android:right="3dp"
                android:bottom="3dp">

                <shape
                    android:shape="rectangle">
                    <solid
                        android:color="#FFFFFF"/>
                </shape>

            </item>

        </layer-list>


    </item>

